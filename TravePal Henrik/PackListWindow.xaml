<Window x:Class="TravePal_Henrik.PackListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravePal_Henrik"
        mc:Ignorable="d"
        Title="PackListWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Label Content="Pack List" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" FontSize="50" HorizontalAlignment="Center"/>

        <ListView Name="lstPackList" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="3"/>

        <Button Name="btnReturn" Content="Return" Grid.Column="1" Grid.Row="1" FontSize="40" Margin="15" Click="btnReturn_Click"/>
    </Grid>
</Window>
